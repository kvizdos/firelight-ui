{
  "compilerOptions": {
    "plugins": [
      {
        "name": "lit-analyzer"
      }
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2017",
    "module": "ES2015",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"]
}
